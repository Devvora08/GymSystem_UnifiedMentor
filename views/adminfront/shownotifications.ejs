<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Notifications</title>
    <style>
      /* Circular gradient background for the body */
      body {
          margin: 0;
          font-family: 'Poppins', sans-serif; /* Ensure consistent font */
          color: #e6e6e6; /* Default text color */
          background: radial-gradient(circle, rgba(10, 10, 30, 1) 0%, rgba(0, 0, 50, 1) 60%, rgba(0, 0, 20, 1) 100%);
      }

      /* Navbar styles */
      .navbar {
          background: rgba(0, 0, 0, 0.8); /* Dark background */
          padding: 15px 0; /* Padding for navbar */
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5); /* Subtle shadow for depth */
      }

      .nav-links {
          display: flex; /* Flex layout for horizontal nav items */
          justify-content: center; /* Center items in the navbar */
          list-style: none; /* Remove default list styles */
          padding: 0; /* Remove default padding */
          margin: 0; /* Remove default margin */
      }

      .nav-links li {
          margin: 0 20px; /* Space between nav items */
      }

      .nav-links a {
          text-decoration: none; /* Remove underline */
          color: #e6e6e6; /* Light color for links */
          font-size: 1.1rem; /* Font size for links */
          padding: 5px 10px; /* Padding around links */
          transition: color 0.3s ease; /* Smooth color transition on hover */
      }

      .nav-links a:hover {
          color: #ffffff; /* Change color on hover */
          text-decoration: underline; /* Underline effect on hover */
      }

      /* Admin contacts styles */
      #admin-contacts {
          text-align: center;
          margin: 50px auto;
          padding: 20px;
          max-width: 80%;
          font-family: 'Poppins', sans-serif;
          color: #e6e6e6;
      }

      /* Centered heading */
      #admin-contacts h2 {
          font-size: 2.5rem;
          margin-bottom: 40px;
          letter-spacing: 1px;
          text-transform: uppercase;
          color: #ffffff; /* White text for the heading */
          width: 100%;
          text-align: center;
      }

      /* Flexbox layout to center the admin contact cards */
      .admin-wrapper {
          display: flex;
          justify-content: center; /* Space between boxes */
          flex-wrap: wrap; /* Allow wrapping on smaller screens */
          padding: 0 10px;
      }

      /* Style for each admin contact box */
      .notifications {
          background: rgba(255, 255, 255, 0.15); /* Glassmorphism */
          backdrop-filter: blur(12px);
          border-radius: 15px;
          padding: 20px;
          width: calc(33.33% - 20px); /* Set width to 1/3 of the container minus gaps */
          margin: 10px; /* Adjust margin */
          box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
          color: #ffffff; /* White text for cards */
          transition: transform 0.3s ease, box-shadow 0.4s ease, background 0.4s ease;
      }

      /* Hover effect on admin boxes */
      .notifications:hover {
          transform: translateY(-10px) scale(1.05);
          box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
          background: rgba(255, 255, 255, 0.25); /* Slightly lighter on hover */
      }

      /* List items inside each admin box */
      .notifications li {
          margin: 10px 0;
          font-size: 1.1rem;
          line-height: 1.6;
          color: #d0d0d0; /* Light gray for list items */
      }

      /* Bold text for important details */
      .notifications strong {
          color: #ffffff; /* Bold text in white */
          font-weight: bold;
      }

      .post-notification-button {
          background-color: #007bff; /* Button color */
          color: #ffffff; /* White text */
          padding: 10px 20px; /* Padding for button */
          border: none; /* No border */
          border-radius: 5px; /* Rounded corners */
          font-size: 1.2rem; /* Font size */
          cursor: pointer; /* Pointer cursor */
          transition: background 0.3s ease; /* Smooth background transition */
          margin-top: 40px; /* Space above the button */
      }

      .post-notification-button:hover {
          background-color: #0056b3; /* Darker blue on hover */
      }

      @media (max-width: 768px) {
          .admin-wrapper {
              flex-direction: column; /* Stack vertically on small screens */
              align-items: center;
          }

          .notifications {
              width: 100%; /* Take full width on small screens */
              margin-bottom: 30px;
          }
      }
    </style>
</head>
<body>
  <nav class="navbar">
      <ul class="nav-links">
          <li><a href="/admin/home">Home</a></li>
          <li><a href="/admin/members">Members</a></li>
          <li><a href="/admin/shop">Shop</a></li>
          <li><a href="/">Logout</a></li>
      </ul>
  </nav>

  <div id="admin-contacts" class="container">
      <h2>Admin Notifications</h2>
      <div class="admin-wrapper">
          <% notifications.forEach(notification => { %>
              <div class="notifications">
                  <ul>
                      <li style="list-style: none; text-align: center; display: flex; flex-direction: column;position: relative; right: 7%;">
                        <span class="date"><%= notification.datePosted.toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' }) %></span><br>
                          <strong><%= notification.title %></strong>: <%= notification.message %>
                          <br>
                       
                      </li>
                  </ul>
              </div>
          <% }) %>
      </div>
      <button class="post-notification-button" onclick="window.location.href='/admin/notify/post';">Post New Notification</button>
  </div>
</body>
</html>
