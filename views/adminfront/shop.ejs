    <title>Shop Carousel</title>
    <style>
        /* Background with dark radial gradient */
        body {
            background: radial-gradient(circle, rgb(164, 164, 164) 0%, rgb(0, 0, 0) 90%);
            color: #FFF;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Navbar styling */
        nav {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        nav ul {
            display: flex;
            list-style-type: none;
            padding: 0;
        }

        nav ul li {
            margin: 0 15px;
        }

        nav ul li a {
            text-decoration: none;
            color: white;
            font-size: 18px;
            transition: color 0.3s ease;
        }

        nav ul li a:hover {
            color: #FFD700; /* Golden color on hover */
        }

        /* Carousel styling */
        .carousel {
            overflow: hidden;
            margin: 20px auto;
            max-width: 90%;
        }

        .carousel-items {
            display: flex;
            transition: transform 0.5s ease-in-out;
            animation: scroll 40s linear infinite;
        }

        .carousel-item {
            flex: 0 0 auto;
            width: 220px;
            margin-right: 15px;
            background-color: #1c1c1c82;
            border-radius: 12px;
            padding: 20px; /* Increased padding for better spacing */
            text-align: center;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.5);
            height: auto;
            opacity: 0; /* Start with 0 opacity for fade-in */
            transition: opacity 0.5s ease;
        }

        /* Fade-in animation */
        .carousel-item.fade-in {
            opacity: 1; /* Fade in effect */
        }

        /* Consistent image size */
        .carousel-item img {
            width: 100%;
            height: 160px;
            border-radius: 8px;
            object-fit: cover;
        }

        .carousel-item h3 {
            font-family: 'Roboto', sans-serif;
            font-size: 20px;
            margin: 10px 0 5px 0;
            color: #FFD700; /* Gold text for elegance */
        }

        .carousel-item p {
            font-family: 'Roboto', sans-serif;
            font-size: 16px;
            margin: 5px 0;
            line-height: 1.4; /* Added line height for better spacing */
        }

        /* "Edit Cart" button */
       
        .edit-cart-btn {
            display: inline-block;
            padding: 10px 15px;
            margin-top: 10px; /* Margin above button */
            background-color: #5c4900;
            color: #ffffff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .edit-cart-btn:hover {
            background-color: #FFD700;
            color: #333;
        }

        /* Keyframe animation for smooth scrolling */
        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-100%);
            }
        }

        /* Font styling for headings */
        h2 {
            font-family: 'Roboto', sans-serif;
            font-size: 24px;
            text-align: center;
            margin-bottom: 15px;
            color: #FFD700;
        }
    </style>
</head>
