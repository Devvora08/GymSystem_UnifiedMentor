<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>welcome to shop page - /admin/shop</h1>
    <nav>
        <ul>
            <li><button onclick="window.location.href='/admin/notify'">notify</button></li>
            <li><button onclick="window.location.href='/admin/home'">home</button></li>
            <li><button onclick="window.location.href='/admin/members'">members</button></li>
            <li><button onclick="window.location.href='/'">logout</button></li>
        </ul>

        <div class="category-section">
            <!-- Clothing Section -->
            <h2>Clothing & Accessories</h2>
            <div class="clothing-items" style="display: flex; flex-direction: row;">
                <% clothing.forEach(function(item) { %>
                    <div class="item">
                        <!-- Use item.imageUrl instead of item.imgUrl -->
                        <img src="<%= item.imageUrl %>" alt="<%= item.itemName %>" class="product-image">
                        <h3>
                            <%= item.itemName %>
                        </h3>
                        <p>Image URL: <%= item.imageUrl %></p>
                        <p>
                            <%= item.description %>
                        </p>
                        <p>Price: Rs.<%= item.price %>
                        </p>
                        <p>In Stock: <%= item.stockQuantity %> items</p>
                        <a href="/admin/shop/<%= item._id %>" class="edit-details-btn">Edit Details</a>
                    </div>
                    <% }); %>
            </div>
        </div>
    
        <div class="category-section">
            <h2>Health and Wellness</h2>
            <div class="health-items" style="display: flex; flex-direction: row;">
                <% health.forEach(function(item) { %>
                    <div class="item">
                        <img src="<%= item.imageUrl %>" alt="<%= item.itemName %>" class="product-image">
                        <p>Image URL: <%= item.imageUrl %></p>
                        <h3><%= item.itemName %></h3>
                        <p><%= item.description %></p>
                        <p>Price: Rs.<%= item.price %></p>
                        <p>In Stock: <%= item.stockQuantity %> items</p>
                        <a href="/admin/shop/<%= item._id %>" class="edit-details-btn">Edit Details</a>
                    </div>
                <% }); %>
            </div>
        </div>
    
        <div class="category-section">
          
            <h2>Equipments</h2>
            <div class="equipment-items" style="display: flex; flex-direction: row;">
                <% equipment.forEach(function(item) { %>
                    <div class="item">
                      
                        <img src="<%= item.imageUrl %>" alt="<%= item.itemName %>" class="product-image">
                        <h3>
                            <%= item.itemName %>
                        </h3>
                        <p>
                            <%= item.description %>
                        </p>
                        <p>Price: Rs.<%= item.price %>
                        </p>
                        <p>In Stock: <%= item.stockQuantity %> items</p>
                        <a href="/admin/shop/<%= item._id %>" class="edit-details-btn">Edit Details</a>
                    </div>
                    <% }); %>
            </div>
        </div>
    
        <div class="category-section">
            <h2>Supplements</h2>
            <div class="supplement-items" style="display: flex; flex-direction: row;">
                <% supplement.forEach(function(item) { %>
                    <div class="item">
                        <img src="<%= item.imageUrl %>" alt="<%= item.itemName %>" class="product-image">
                        <p>Image URL: <%= item.imageUrl %></p> <!-- Debugging output -->
                        <h3><%= item.itemName %></h3>
                        <p><%= item.description %></p>
                        <p>Price: Rs.<%= item.price %></p>
                        <p>In Stock: <%= item.stockQuantity %> items</p>
                        <a href="/admin/shop/<%= item._id %>" class="edit-details-btn">Edit Details</a>
                    </div>
                <% }); %>
            </div>
        </div>
</body>
</html>