<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>welcome to shop of members</h1>
    <ul>
        <li><button onclick="window.location.href='/member/details'">Details</button></li>
        <li><button onclick="window.location.href='/member/bill'">Bill</button></li>
        <li><button onclick="window.location.href='/member/notification'">Notification</button></li>
        <li><button onclick="window.location.href='/member/home'">Home</button></li>
        <li><button onclick="window.location.href='/member/cancelmember'">Cancel Membership</button></li>
    </ul>

    <div class="category-section">
        <!-- Clothing Section -->
        <h2>Clothing & Accessories</h2>
        <div class="clothing-items" style="display: flex; flex-direction: row;">
            <% clothing.forEach(function(item) { %>
                <div class="item">
                    <!-- Use item.imageUrl instead of item.imgUrl -->
                    <img src="<%= item.imageUrl %>" alt="<%= item.itemName %>" class="product-image">
                    <h3>
                        <%= item.itemName %>
                    </h3>
                    <p>Image URL: <%= item.imageUrl %></p>
                    <p>
                        <%= item.description %>
                    </p>
                    <p>Price: Rs.<%= item.price %>
                    </p>
                    <p>In Stock: <%= item.stockQuantity %> items</p>
                    <a href="/member/shop/<%= item._id %>" class="view-details-btn">View Details</a>
                </div>
                <% }); %>
        </div>
    </div>

